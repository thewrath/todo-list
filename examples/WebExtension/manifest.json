{
    "name": "TODO List",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Simple TODO List",
    "homepage_url": "https://github.com/thewrath/todo-list/tree/master/examples/WebExtension",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "*://localhost/*",
        "webRequest",
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_title": "Todo",
        "default_popup": "views/popup.html"
    }
}